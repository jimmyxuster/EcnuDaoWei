<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jimmyhsu.ecnudaowei.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_shdetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:title="详情"
        app:titleTextColor="#ffffff"/>

<com.jimmyhsu.ecnudaowei.View.ScrollViewWithViewPager
    android:id="@+id/id_shdetail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/id_shdetail_toolbar"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#c2c2c2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_shdetail_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/userdefault"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/id_shdetail_head"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">
            <TextView
                android:id="@+id/id_shdetail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="用户名" />
            <TextView
                android:id="@+id/id_shdetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:text="今天 18:59" />
            </LinearLayout>
            <TextView
                android:id="@+id/id_shdetail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格 元"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                android:textStyle="italic"
                android:textColor="#ff3300"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/id_shdetail_pager"
                android:layout_width="match_parent"
                android:layout_height="380dp"/>
            <com.jimmyhsu.ecnudaowei.View.PositionIndicator
                android:id="@+id/id_shdetail_pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"/>
        </FrameLayout>
        <TextView
            android:id="@+id/id_shdetail_title"
            android:text="标题"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_shdetail_desc"
            android:text="@string/test_desc"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#b6b6b6"/>
        <TextView
            android:id="@+id/id_shdetail_title_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="标题"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="@drawable/divider_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id_shdetail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:text="× 1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="数量"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id_shdetail_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:text="几近全新"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="成色"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id_shdetail_postage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:text="0 元"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="邮费"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_shdetail_contact"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#64dd17"/>
            <TextView
                android:id="@+id/id_shdetail_link"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="交易链接"
                android:textAlignment="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="#ffffff"
                android:background="@color/colorAccent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#c2c2c2"/>
        <LinearLayout
            android:id="@+id/id_shdetail_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="end"
            android:divider="@drawable/divider_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textColor="#000000"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="最新评论"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/id_shdetail_comment_editor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/userdefault"
            android:drawablePadding="8dp"
            android:hint="我来说两句"/>
            <Button
                android:id="@+id/id_shdetail_send_comment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/action_send"
                />
        </LinearLayout>

    </LinearLayout>
</com.jimmyhsu.ecnudaowei.View.ScrollViewWithViewPager>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/id_shdetail_fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#ffffff"
        android:visibility="gone"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:backgroundTint="#ffc107"/>
</RelativeLayout>