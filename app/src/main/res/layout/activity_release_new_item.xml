<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jimmyhsu.ecnudaowei.ReleaseNewItemActivity">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/id_release_item_name"
                            style="?android:attr/textViewStyle"
                            android:background="@null"
                            android:hint="@string/sell_item_name"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textColorHint="#c6c6c6"
                            android:paddingTop="9sp"
                            android:paddingBottom="30sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:divider="@drawable/divider_vertical">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/id_release_count"
                                    style="?android:attr/textViewStyle"
                                    android:background="@null"
                                    android:hint="输入"
                                    android:inputType="number"
                                    android:textColorHint="#d6d6d6"
                                    android:textAlignment="center"
                                    android:textSize="18sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="数量"
                                    android:textAlignment="center"
                                    android:textSize="12sp"
                                    android:textColor="#797979"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <Spinner
                                    android:id="@+id/id_release_condition"
                                    android:background="@null"
                                    android:textColor="#d6d6d6"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="18sp"
                                    android:entries="@array/item_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="成色"
                                    android:layout_marginTop="8dp"
                                    android:textAlignment="center"
                                    android:textSize="12sp"
                                    android:textColor="#797979"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/id_release_postage"
                                    style="?android:attr/textViewStyle"
                                    android:background="@null"
                                    android:hint="填写"
                                    android:textColorHint="#d6d6d6"
                                    android:textAlignment="center"
                                    android:textSize="18sp"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="邮费"
                                    android:layout_marginTop="8dp"
                                    android:textAlignment="center"
                                    android:textSize="12sp"
                                    android:textColor="#797979"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:showDividers="middle"
                        android:divider="@drawable/divider_horizontal"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="联系方式"
                                android:textSize="18sp"
                                android:textColor="#9e9e9e"/>
                            <EditText
                                android:id="@+id/id_release_contact"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:textSize="16sp"
                                android:textColorHint="#d6d6d6"
                                android:background="@null"
                                style="?android:attr/textViewStyle"
                                android:hint="必填, 如旺旺、微信等"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="出售价格"
                                android:textSize="18sp"
                                android:textColor="#9e9e9e"/>
                            <EditText
                                android:id="@+id/id_release_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:inputType="number"
                                android:textSize="16sp"
                                android:textColorHint="#d6d6d6"
                                android:background="@null"
                                style="?android:attr/textViewStyle"
                                android:hint="必填, 输入价格"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="交易链接"
                                android:textSize="18sp"
                                android:textColor="#9e9e9e"/>
                            <EditText
                                android:id="@+id/id_release_link"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:textSize="16sp"
                                android:inputType="textUri"
                                android:textColorHint="#d6d6d6"
                                android:background="@null"
                                style="?android:attr/textViewStyle"
                                android:hint="选填, 仅支持闲鱼链接"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">
                        <EditText
                            android:id="@+id/id_release_description"
                            style="?android:attr/textViewStyle"
                            android:background="@null"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="80dp"
                            android:hint="请详细描述交易详情"
                            android:textColorHint="#d6d6d6"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <com.jimmyhsu.ecnudaowei.View.FullyDisplayGridView
                            android:id="@+id/id_release_pic_grid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:numColumns="3"
                            android:horizontalSpacing="4dp"
                            android:verticalSpacing="4dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </LinearLayout>

        </FrameLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/id_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">
        <com.jimmyhsu.ecnudaowei.View.FishProgressBar
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:clickable="true"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>